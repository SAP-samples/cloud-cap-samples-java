{
  "build": {
    "target": ".",
    "tasks": [
      {
        "for": "java"
      },
      {
        "for": "mtx",
        "src": ".",
        "dest": "mtx-sidecar"
      },
      {
        "for": "hana"
      }
    ]
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
