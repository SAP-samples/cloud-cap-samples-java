    "@sap/cds": "^6",
    "@sap/cds-mtxs": "^1",
    "express": "^4",
    "hdb": "^0",
    "passport": "^0",
    "@sap/xssec": "^3"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana-mt",
        "auth": "xsuaa"
      },
      "[development]": {
        "db": "sqlite",
        "auth": "dummy"
      },
      "cds.xt.ModelProviderService": "in-sidecar",
      "cds.xt.DeploymentService": true,
      "cds.xt.SaasProvisioningService": true,
      "cds.xt.ExtensibilityService": true
