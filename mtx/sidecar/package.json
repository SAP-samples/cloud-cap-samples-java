{
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/cds-mtxs": "^1",
    "express": "^4",
    "hdb": "^0",
    "passport": "^0",
    "@sap/xssec": "^3"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana-mt",
        "auth": "xsuaa"
      },
      "[development]": {
        "db": "sqlite",
        "auth": "dummy"
      },
      "cds.xt.ModelProviderService": "in-sidecar",
      "cds.xt.DeploymentService": true,
      "cds.xt.SaasProvisioningService": true,
      "cds.xt.ExtensibilityService": true
    }
  },
  "devDependencies": {
    "sqlite3": "^5",
    "forever": "^4"
  },
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "start": "cds run",
    "build": "npm install && npx cds build ../.. --for mtx-sidecar && cd gen && npm install",
    "startAsync": "forever start -o out.log -e err.log -c node node_modules/@sap/cds/bin/cds.js run --profile development",
    "stopAsync": "forever stopall"
  }
}
